@model Model_View_Controller.Models.EmployeeViewModel
@{
	ViewData["Title"] = "Delete Employee";
	var errorMessage = TempData["errorMessage"]?.ToString();
}
<h3> @ViewData["Title"]</h3>
<hr />
@if (!string.IsNullOrWhiteSpace(errorMessage))
{
	<div class="alert alert-success">
		<strong>Error!</strong>@errorMessage
		<button type="button" class="btn-close float-end " data-bs-dismiss="alter" aria-label="Close"></button>
	</div>
}
<form action="Delete" method="post" autocomplete="off">
	<div class="mb-3">
		<label class="form-lebel"> Id</label>
		<input type="text" class="form-control" asp-for="Id" readonly />
	</div>
	<div class="mb-3">
		<label class="form-label">First Name</label>
		<input type="text" class="form-control" asp-for="FirstName" readonly />
	</div>
	<div class="mb-3">
		<label class="form-label">Last Name</label>
		<input type="text" class="form-control" asp-for="LastName" readonly />
	</div>
	<div class="mb-3">
		<label class="form-label">Data Of Birth </label>
		<input type="date" class="form-control" asp-for="DataOfBirth" readonly />
	</div>
	<div class="mb-3">
		<label class="form-label">E-mail</label>
		<input type="email" class="form-control" asp-for="Email" readonly />
	</div>
	<div class="mb-3">
		<label class="form-label">Salary</label>
		<div class="input-group">
			<span class="input-group-text ">$</span>
			<input type="text" class="form-control" asp-for="Salary" readonly />
		</div>
	</div>
	<div class="d-grid">
		<button type="submit" class=" btn btn-danger" onclick="return function('Are you sure to delete Employee : @Model.FullName')">Delete</button>

	</div>
</form>
